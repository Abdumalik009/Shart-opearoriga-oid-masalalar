package If;

import java.util.Scanner;

public class If4 {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Sonni kiriting: ");
        int A = scanner.nextInt();

        if ( A>0) {

            System.out.println(A);
        } else if (A==0) {
            System.out.println(A+10);
        } else {
            A-=2;
            System.out.println(A);
        }
    }
}
